/**/


.portletNavigationTree {
    margin: 0; 
    list-style: none; 
    list-style-image: none; 
}

.navTree {
    list-style: none; 
    list-style-image: none; 
    margin-top: 0px;
    font-size: 11px;
    /*text-transform: Capitalize;*/
}

.navTree li {
    margin:0;
    padding:0;
    margin-bottom: 0px;
}

.navTreeItem {
    width:100%;
    display: block;
    padding: 0;
    margin: 0;
    font-size: 90%;
    color:#9ae033;
    /*text-transform: Capitalize;*/
}

.navTreeItem a {
    border:0;
    display: block;
    text-decoration: none;
}

.navTreeItem a:hover {
    background-color: black;
    color: #33a6a9;
    border: &dtml-borderWidth; &dtml-borderStyle; &dtml-globalBorderColor;;
}

.navTreeCurrentItem {
    background-color: transparent;
    color: #33a6a9;
    border: &dtml-borderWidth; &dtml-globalBorderColor; !important;
}
li.navTreeItem {
    color:red;
}

li.navTreeCurrentItem {
    display: block;
    padding: 0 0 0 1px;
    margin: 0 0 2px -1px;
}

li.navTreeCurrentItem a,
li.navTreeCurrentItem a:hover {
    display: block;
    border: &dtml-borderWidth; &dtml-borderStyle; &dtml-globalBackgroundColor;;
    min-height: 1.6em;
    height: auto;
}


/* Another workaround for broken Internet Explorer */

* html li.navTreeCurrentItem a,
* html li.navTreeCurrentItem a:hover {
    height: 1.6em;
}

.navTreeLevel0 {
    font-weight : bold;
    font-size : 130%;
}

.navTreeLevel1 {
    margin-bottom:1em;
    font-weight : bold;
}
