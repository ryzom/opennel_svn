/* The new portlet CSS - these will be switched to non-qualified classes
   (ie. .portlet, not dl.portlet) once the old portlet layout is removed in
   Plone 2.2. ~limi */

/* Main portlet elements */

.portletHeader {
	font-size : 120%;
	color : #9ae033;
	border-bottom : solid #9ae033 1px;
	background-image: url('h1.gif');
	background-repeat: no-repeat;
	background-position : center left;
	padding-left : 2em;
    text-align: left;
}

.portletHeader a {
    color: #9ae033;
}

.portletItem {
    margin: 0;
    padding: 0;
    padding-top: 2em;
    padding-left: 1em;
    border:0;
    white-space: normal;
}

#portal-column-one .portletItem  { 
    margin: 0;
    padding: 0;
    border:0;
    text-align:left;
}

#portal-column-two .portletItem {
    margin: 0;
    padding: 0;
    border:0;
    white-space: nowrap;
    overflow: hidden;
}

.portletItemLast {
    margin: 0;
    padding: 2px 5px;
    border:0;
    border-top-style: none;
}


.portletItem a {
    display: block;
}

.portletItemDetails {
    margin-left: 1.5em;
    text-align: left;
    display: block;
    color: &dtml-fontColor;;
}

.portletFooter {
  background-color : #31322D;
  margin:0;
  padding:0;
  margin-left: 5px;  
  padding-left: 5px; 
  border-top: 0;
}


/* Elements that enable layout with rounded corners */

.portletTopLeft {}
.portletTopRight {}
.portletBottomLeft {}
.portletBottomRight {}



