.weblog-summary ul .news_quote {
   border: 1px solid #5a5c51;
   padding: 0.5em;
   margin: 0.5em 0em;
}
.weblog-body ul .news_quote {
   border: 1px solid #5a5c51;
   padding: 0.5em;
   margin: 0.5em 0em;
}

.unofficial-box a, .weblog-entry a, .documentBody a {
   border:none !important;
   text-decoration: none !important;
}

.weblog-body img {margin:1em;}

.weblog-heading a {text-decoration: none !important;}

.titleFAQ {color:#4bffff;}

a img .thumbnail {
	text-decoration: none;
	border: 1px solid #ffc30e;
}

.thumbnail {
	text-decoration: none;
	border: solid grey 1px;
	margin-right:10px;
	margin-bottom:10px;
}

.thumbnail:hover {
	text-decoration: none;
	border: solid white 1px;
}

a .thumbnail {
	border: solid grey 1px;
	margin-right:10px;
	margin-bottom:10px;
}

legend {
    background: black;
    color: white;
    padding: 2px;
    font-size: 90%;
    border: 1px solid green;
}


/*css serverstatus*/
#serverstatus{
    margin:0;
    border:0;
    padding:0px 5px;
    background-color: #5f5e57;
    color: #ccc;
    border-radius: 0 0 0 12px;
    -moz-border-radius: 0 0 0 12px;
    width:32em;
    height:1.3em;
    display: inline;
    position:relative;
    top:0px !important;
    top:-1px;
}

.OPEN {
	background: url('server_up.png') no-repeat;
	padding-left : 20px;
}
.CLOSED {
	background: url('server_down.png') no-repeat;
	padding-left : 20px;
}
.LOCKED {
	background: url('server_locked.png') no-repeat;
	padding-left : 20px;
}
/*fin du css serverstatus*/


.state-private {color: Red;}
.state-visible {color: #74AE0B;}
.state-published {color: #33a6a9;}
.state-pending {color: lightblue;}
.state-expired {color: Red;}
.syndicated {color: #008000;}
.portletItem{color:#ffc30e;}
.portletItemDetails{color:#ffc30e;}

