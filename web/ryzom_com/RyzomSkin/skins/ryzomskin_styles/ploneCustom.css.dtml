img {border:0;padding:0;margin:0;}

/*page dl freetrial*/
.bpm{
    border:0;
    padding:0;
    margin:0;
}
.serveur_td{
    height:28px;
    background-image: url(http://www.ryzom.com/images/cm/page_freetrial/serveur_back.png);
    background-repeat: no-repeat;
    background-position: right;
    font-size:18px;
    font-weight:bold;
    line-height:28px;
    text-align:left;
}
#free_title{
    font-size:24px;
    font-weight: bold;
}

/*diff from public.css & mobile.css & presentation.css*/
a {color: &dtml-linkColor;}

/*diff from atcontentype.css*/

.photoAlbumFolder {
background-image: url('polaroid-multi.jpg');
background-repeat: no-repeat;
}

.photoAlbumEntry {
float: left;
height: 185px;
width: 143px;
margin: 0em;
padding: 0px 6px 0px 9px;
text-align: center;
background-image: url('polaroid-single.jpg');
background-repeat: no-repeat;
}

/*diff from columns*/
#portal-column-one {
vertical-align: top;
width: 175px;
}
#portal-column-two {
vertical-align: top;
width: 200px;
padding:0;
margin:0;
cellspacing:0;
}

#portal-column-one .visualPadding {padding: 30px 0px 30px 30px;}
#portal-column-two .visualPadding {padding: 0;}

.linkopacity img {
   -khtml-opacity: 0.5;
   filter: progid:DXImageTransform.Microsoft.Alpha(opacity=50);
   filter:alpha(opacity=50);
   -moz-opacity: 0.5;
   opacity: 0.5;
}

.linkopacity:hover img {
   -khtml-opacity: 1.0;
   filter: progid:DXImageTransform.Microsoft.Alpha(opacity=100);
   filter:alpha(opacity=100);
   -moz-opacity: 1.0;
   opacity: 1.0;
}

.visualClearHeight {
    clear: both;
    font-size: 1px;
    height: 1px;
    border: none;
    margin: 0;
    padding: 0;
    background: transparent;
}

.contentActions img {
   vertical-align: middle;
}

.news_quote {
   border: 1px solid #5a5c51;
   padding: 1em;
   margin: 1em;
   background-color: #282828;
}

.weblog-summary .weblog_chronicles{
   min-height:280px;
}
