<metal:block use-macro="here/global_defines/macros/defines" />
<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body metal:define-macro="portlet">

<div id="portlet_flash_freetrial_morevideo"
     width="180"
     align="center"
     style="background-color:#5F5E57;margin:1em 0em;">
	<img  class="fakeBorder" src="side_top.png" alt="" />
	<div style="width:180px;
		    background-color:black;
		    border-radius:10px;-moz-border-radius:10px;-ie-border-radius:10px;">

	<a href="" style="font-size:1.5em;font-weight:bold"
	   i18n:attributes="portlet_flash_freetrial_video_link">
		<object classid="clsid:d27cdb6e-ae6d-11cf-96b8-444553540000"
			codebase="http://fpdownload.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=8,0,0,0"
			id="Ryzom_Video_160x600">
			<param name="allowScriptAccess" value="sameDomain" />
			<param name="movie" value="Ryzom_Video_160x600.swf" />
			<param name="quality" value="high" />
			<param name="bgcolor" value="#000000" />
			<embed src="http://mk1.nevrax.com/data/flash/Video_160x600.swf"
			       quality="high"
			       name="Ryzom_Video_160x600"
			       width="160" height="350"
			       style="margin-top:5px;vertical-align:middle;"
			       allowScriptAccess="sameDomain"
			       type="application/x-shockwave-flash"
			       pluginspage="http://www.macromedia.com/go/getflashplayer" />
		</object>
		<div i18n:translate="portlet_flash_freetrial_morevideo">Watch the  Videos</div>
	</a>
	
	</div>
	<div class="imageHide">
		<img class="fakeBorder" src="side_up.png" alt="" />
	</div>
</div>

<div id="portlet_flash_freetrial_moreimages"
     width="180"
     align="center"
     style="background-color:#5F5E57;margin:1em 0em;">
	<img src="side_top.png" alt="" />
	<div style="width:180px;
		    background-color:black;
		    border-radius:10px;-moz-border-radius:10px;-ie-border-radius:10px;">        

	<a href="" style="font-size:1.5em;font-weight:bold"
	   tal:attributes="href string:${portal_url}/multimedia/screenshots">
		<img style="border:0" src="http://www.ryzom.com/images/pages/screen.gif" alt="Screenshots" />
		<div i18n:translate="portlet_flash_freetrial_morevideo">More Screenshots</div>
	</a>
	</div>
	<div class="imageHide">
		<img class="fakeBorder" src="side_up.png" alt="" />
	</div>
</div>

</body>
</html>
